@font-face {
    font-family: 'YoungSerif';
    src: url('{{ "YoungSerif-Regular.eot" | asset_url }}'); /* IE9 Compat Modes */
    src: url('{{ "YoungSerif-Regular.eot?#iefix" | asset_url }}') format('embedded-opentype'), /* IE6-IE8 */
         url('{{ "YoungSerif-Regular.woff2" | asset_url }}') format('woff2'), /* Super Modern Browsers */
         url('{{ "YoungSerif-Regular.woff" | asset_url }}') format('woff'), /* Pretty Modern Browsers */
         url('{{ "YoungSerif-Regular.ttf" | asset_url }}')  format('truetype'), /* Safari, Android, iOS */
         url('{{ "YoungSerif-Regular.svg#svgFontName" | asset_url }}') format('svg'); /* Legacy iOS */
}

:root {
    --headline-font: 'YoungSerif', 'Georgia', 'Times New Roman', Times, serif;
    --text-font: 'Karla', 'Helvetica Neue', Arial, Helvetica, sans-serif;

    --black: #000000;
    --white: #FFFFFF;

    --light-black: #333333;

    --text-color: #555555;
    --text-color-white: #CCCCCC;
    --text-color-light: #707070;
    --text-color-light-white: #AAAAAA;

    --gold: #BEA482;

    --background-color: #F7F2EA;
    --header-background-color: #EEE6DD;
    --footer-background-color: #F4EDE6;
    --border-color: rgba(0,0,0,0.15);
    --border-color-white: rgba(255,255,255,0.15);

    --standard-border: 1px solid var(--border-color);
    --standard-border-white: 1px solid var(--border-color-white);

    --line-global: 20px;
    --gutter-global: var(--line-global);
    --offset-global: calc(var(--line-global) * 2);

    --header-height: calc(var(--line-global) * 4);

    --type-headline-lg: 50px;
    --type-headline-med: 30px;
    --type-body-med: 15px;
    --type-body-sm: 13px;

    --type-bold: 700;
    --type-med: 500;
    --type-book: 400;
}

/* BASE STYLES */

* {
    font-family: var(--text-font);
    box-sizing: border-box;
}

html, body {
    width: 100%;
    margin: 0;
    padding: 0;
    color: var(--black);
    line-height: var(--line-global);
}

body {
    font-size: var(--type-body-med);
    background-color: var(--background-color);
    background-image: url(background.jpg);
    background-size: 100%;
    background-attachment: fixed;
    background-repeat: no-repeat;
    padding-top: calc(var(--header-height) + var(--offset-global));
}

h1, h2, h3, h4, h5, h6, p, ul, ol {
    margin: 0;
    padding: 0;
    font-weight: var(--type-book);
}

a {
    text-decoration: none;
}

ul, ol {
    list-style-type: none;
}

/* STYLE GUIDE */

/* prev mixins */
.flex-space-between {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
 }
 
 .spaced-caps {
     font-size: var(--type-body-sm);
     font-weight: var(--type-bold);
     text-transform: uppercase;
     letter-spacing: 0.075em;
 }

 /* */

h1, .h1, h2, .h2, h3, .h3 {
    font-family: var(--headline-font);
    font-weight: var(--type-med);
    color: var(--light-black);
    letter-spacing: 0.5px;
}

h1, .h1 {
    font-size: var(--type-headline-lg);
    line-height: calc(var(--line-global) * 3);
}

h2, .h2 {
    font-size: var(--type-headline-med);
    line-height: calc(var(--line-global) * 2);
}

h3, .h3 {
    font-size: var(--type-body-med);
    line-height: var(--line-global);
}

h4, .h4 {
    color: var(--light-black);
}

a {
    color: var(--text-color);
}

a:hover {
    opacity: 0.75;
}

p {
    color: var(--text-color);  
}

p a {
    border-bottom: var(--standard-border);
}

p a:hover {
    border-bottom: var(--black);
}

.text-link {
    color: var(--black);
}


button[type="submit"], button.button {
    /* reset-input */
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    -webkit-font-smoothing: inherit;
    -moz-osx-font-smoothing: inherit;
    text-align: left;
    /* */
    width: 100%;
    padding: var(--line-global);
    text-align: center;
    font-size: var(--type-body-med);
    line-height: var(--line-global);
    background: var(--gold);
    color: var(--white);
}

button[type="submit"]:disabled {
    opacity: 0.75;
    cursor: not-allowed;
    text-decoration: line-through;
}

button[type="submit"]:not(:disabled):hover, 
button[type="button"]:not(:disabled):hover {
    filter: brightness(0.9);
  }

/* UTILITY CLASSES */

/* el still read by screen readers & search engines */
.visually-hidden {
    position: absolute !important;
    height: 1px;
    width: 1px;
    overflow: hidden;
    clip: rect(1px 1px 1px 1px);   
}

.wrapper {
    padding-left: var(--offset-global);
    padding-right: var(--offset-global);
}

.grid {
    display: grid;
    grid-column-gap: var(--gutter-global);
    grid-row-gap: var(--gutter-global);
}

.grid > * {
    min-width: 0;
    min-height: 0;
}

.grid.collapse {
    grid-column-gap: 0;
    grid-row-gap: 0;
}

.two-columns {
    grid-template-columns: 1fr 1fr;
}

.valign-center {
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
}

/* these 2 replace justify-content: center, which vert centered mini-cart contents but blocked top & bottom from scrollable area */
.valign-center > *:first-child {
    margin-top: auto;
}
.valign-center > *:last-child {
    margin-bottom: auto;
}

.ta-center {
    text-align: center;
}

.text-white, .text-white a {
    color: var(--white);
}

.text-white p, .accent-color {
    color: var(--text-color-white);
}

h1, .h1, h2, .h2, h3, .h3, .h4, a {
    color: inherit;
}

/* HEADER */

.header-global {
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    background-color: var(--header-background-color);
    padding: var(--line-global) var(--offset-global);
}

.header-global .shop-link {
    order: -1;
}

.cart-close-text {
    display: none;
}

/* FOOTER */

.footer-global {
 background-color: var(--footer-background-color);
 margin-top: var(--offset-global);
 border-top: var(--standard-border);
}

.footer-global h4 {
    margin-bottom: var(--line-global);
}

.footer-top, .footer-bottom {
    padding: var(--offset-global);
}

.footer-top {
    grid-template-columns: 2fr 1fr 1fr;   
}

.footer-bottom {
    border-top: var(--standard-border);
}

.social-links a {
    display: inline-block;    
}

.social-links a:not(:last-child) {
    margin-right: calc(var(--line-global)/2);
}

/* INDEX PAGE */

.index-top {
    height: 50vh;
    min-height: 400px;
    padding-bottom: var(--offset-global);
}

/* SHARED PRODUCT (CARD & PAGE) STYLES */

.product-info-section {
    background: var(--light-black);
    padding: var(--offset-global);
    display: flex;
    flex-direction: column;

    text-align: center;
}

.product-info-section .product-title {
    padding: var(--line-global) 0;
    margin-top: auto;
    margin-bottom: auto;
}

.product-info-section .price {
    display: inline-block;
    font-size: var(--line-global);
    color: var(--text-color-white);
    font-weight: var(--type-book);
    vertical-align: super;
}

.product-info-section .below-title {
    max-width: 396px;
    margin: 0 auto;
}

.product-description {
    margin-bottom: var(--line-global);
}

/* PRODUCT CARD */

.product-card .card-image a {
    display: block;
    width: 100%;
    height: 100%;
}

.product-card .card-image img {
    display: block;
    max-width: 100%;
    height: auto;
}

.product-card:nth-child(odd) .card-image {
    grid-column: 0;
    grid-row: 1;
}

/* PRODUCT PAGE */

.product-image {
    width: 100%;
}

.product-image img {
    display: block;
    max-width: 100%;
    height: auto;
}

/* ADD TO CART FORM */

.option-row {
    text-align: left;
    padding: var(--line-global) 0;
    border-top: var(--standard-border-white);
}

[class~='option-row']:last-of-type {
    border-bottom: var(--standard-border-white);
}

.option-title {
    color: var(--text-color-white);
}

.variant-radio + label {
    display: inline-block;
    cursor: pointer;
    padding: calc(var(--line-global)/4);
    border: 1px solid transparent;
    color: var(--text-color-light-white);
    transition: border 0.1s ease-in;
}

.variant-radio:checked + label {
    color: white;
    border: 1px solid var(--white);
}

.variant-radio:disabled + label {
    cursor: not-allowed;
    text-decoration: line-through;
}

.quantity-btn {
    /* reset-input */
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    -webkit-font-smoothing: inherit;
    -moz-osx-font-smoothing: inherit;
    text-align: left;
    /* */
    font-size: var(--line-global);
    line-height: var(--line-global);
    text-align: center;
    font-weight: var(--type-bold);
    color: var(--text-color-white);
    width: var(--line-global);
}

.quantity-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.quantity-btn:not(:disabled):hover{
    color: var(--white);
}

.quantity-text {
    display: inline-block;
    text-align: center;
    min-width: var(--line-global);
    margin: 0 calc(var(--line-global)/2);
}

#add-to-cart-btn {
    margin-top: var(--line-global);
}

/* CART SHARED STYLES */
.cart-lines {
    margin-top: var(--line-global);
    border-top: var(--standard-border-white);
    border-bottom: var(--standard-border-white);
    padding: var(--line-global) 0;
}

.cart-empty-text {
    margin: calc(var(--line-global) * 4) 0;
}

/* CART PAGE */

.cart-page-contents {
    background: var(--light-black);
    padding: var(--offset-global);
    max-width: 380px;
    margin: 0 auto;
}

/* LINE ITEM */
.line-item .line-image {
    width: 80px;
    position: relative;
}

.line-item img {
    display: block;
    max-width: 100%;
    height: auto;
}

.line-item .remove-line {
    position: absolute;
    width: var(--line-global);
    height: var(--line-global);
    top: calc(var(--line-global)/-2);
    right: calc(var(--line-global)/-2);
    color: var(--text-color-light-white);
    transition: opacity 0.1s ease-in;
    opacity: 0;
}

.line-item:hover .remove-line {
    opacity: 1;
}

.line-item:not(:first-child) {
    margin-top: var(--line-global);
}

.subtotal-line {
    padding: var(--line-global) 0;
}

/* MINI-CART */

#mini-cart {
    position: fixed;
    top: var(--header-height);
    bottom: 0;
    right: 0;
    width: 100%;
    max-width: 380px;
    background: var(--light-black);
    display: none;
}

#mini-cart .mini-cart-contents {
    overflow: auto;
    padding: var(--offset-global);
    height: 100%;
}

/* MINI-CART TOGGLE */
.cart-link {
    width: 62px;
}

/* prevents scrolling in dimmed area  */
html.mini-cart-open {
    overflow: hidden;
}

html.mini-cart-open #mini-cart {
    display: block;
}

html.mini-cart-open .cart-link .cart-text {
    display: none;
}

html.mini-cart-open .cart-link .cart-close-text {
    display: inline-block;
}

html.mini-cart-open main {
    opacity: 0.3;
    pointer-events: none;
    user-select: none;
}

/* PAGE */

#page {
    min-height: 80vh;
}
  
#page .page-content {
    margin-top: var(--offset-global);
}
  
#page .page-inner {
    max-width: 500px;
    margin: 0 auto;
}

/* 404 Page */
#page-404 {
    min-height: calc(100vh - var(--header-height));
}